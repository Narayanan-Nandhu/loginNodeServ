{
    "compilerOptions": {
     "jsx": "react",
     "moduleResolution": "node",
     "esModuleInterop": true,
     "target": "es6",
     "module": "commonjs",
     "lib": [
       "dom",
       "esnext"
     ],
     "strict": true,
     "sourceMap": true,
     "declaration": true,
     "incremental": true,
     "pretty": true,
     "outDir": "./dist"
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "model/*",
      "passport/*",
      "utils/*",
      "routes/*",
    ]
  }
  