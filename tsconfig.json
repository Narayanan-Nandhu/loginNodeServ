{
    "compilerOptions": {
     "jsx": "react",
     "typeRoots": [
       "node_modules/@types"
     ],
     "moduleResolution": "node",
     "esModuleInterop": true,
     "target": "es6",
     "module": "commonjs",
     "lib": [
       "dom",
       "esnext"
     ],
     "strict": true,
     "sourceMap": true,
     "declaration": true,
     "incremental": true,
     "pretty": true,
     "outDir": "./dist"
    },

    "include": [
      "model/*",
      "passport/*",
      "utils/*",
      "routes/*",
      "test/*", 
    ]
  }
  